apiVersion: apps/v1
kind: Deployment
metadata:
  name: hello-app  # Name of the deployment
  labels:
    app: hello-app
spec:
  replicas: 3  # Number of instances (pods) of your application
  selector:
    matchLabels:
      app: hello-app  # Match pods with this label
  template:
    metadata:
      labels:
        app: hello-app  # Labels to apply to the pod
    spec:
      containers:
        - name: hello-app-container  # Name of the container
          image: testazurecontainer1.azurecr.io/gradlehello:db5077f  # Docker image to use
          ports:
            - containerPort: 80  # Port the container exposes
